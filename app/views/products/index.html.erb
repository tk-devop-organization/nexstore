<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card">
          <%= image_tag product.images.first, class: "card-img-top" if product.images.attached? %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description.truncate(100) %></p>
            <p class="card-text"><strong>Price: </strong>$<%= product.price %></p>
            <%= link_to 'View Details', product_path(product), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
